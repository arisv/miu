{% extends 'base_layout.twig' %}

{% block title %}
    My files - {{ userName }}
{% endblock %}

{% block maincontent %}
    <div class="row">
        <div class="col-md-offset-4 col-xs-8" id="managebuttons">
            <a class="btn {{ page == 'token' ? 'btn-info' : 'btn-default' }}" href="/manage/mytoken" role="button">Remote token</a>
            <a class="btn {{ page == 'mypics' ? 'btn-info' : 'btn-default' }}" href="/manage/mypics" role="button">View my pictures</a>
            {% if app.isUserAdmin == true %}
                <a class="btn {{ page == 'allpics' ? 'btn-info' : 'btn-default' }}" href="/manage/admin" role="button">View ALL pictures (admin)</a>
            {% endif %}
        </div>
    </div>
    {% block managecontent %}
    {% endblock %}
{% endblock %}