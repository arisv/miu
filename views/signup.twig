{% extends 'base_layout.twig' %}

{% block title %}
    MeowUpload - home
{% endblock %}

{% block maincontent %}
        <div class="row">
            <div class="col-md-2 col-md-offset-5">
                <form class="form" data-act="signup" id="login-form" method="post">

                    <h1 class="text-center mrgb30">Sign up </h1>

                    <div class="form-group l-sign-form-group">
                        <label for="register-email" class="sr-only">Email</label>
                        <input type="email" name="registerEmail" class="form-control" id="register-email" placeholder="Email">
                    </div>

                    <div class="form-group l-sign-form-group">
                        <label for="register-login" class="sr-only">Login/label>
                        <input type="text" name="registerLogin" class="form-control" id="register-login" placeholder="Login">
                    </div>


                    <div class="form-group l-sign-form-group">
                        <label for="register-pass" class="sr-only">Password</label>
                        <input type="password" name="registerPass" class="form-control" id="register-pass" placeholder="Password">
                    </div>

                    <div class="form-group l-sign-form-group">
                        <label for="register-pass-r" class="sr-only">Password</label>
                        <input type="password" name="registerPassCheck" class="form-control" id="register-pass-r" placeholder="Repeat password">
                    </div>

                    <div class="l-sign-inner">

                        <div class="alert alert-danger hidden">ERROR</div>

                        <div class="l-sign-btn l-sign-btn-center">
                            <button id="login-form-button" type="submit" class="btn btn-primary btn-wmid">Register</button>
                        </div>
                    </div><!-- /.l-sign-inner -->

                </form>
            </div>
        </div>
{% endblock %}